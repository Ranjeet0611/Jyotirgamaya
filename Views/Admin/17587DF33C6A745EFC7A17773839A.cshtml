    <div class="container mt--8 pb-5">
      <div class="row justify-content-center">
        <div class="col-lg-5 col-md-7">
          <div class="card bg-secondary shadow border-0">
            
            <div class="card-body px-lg-5 py-lg-5" style="background-color:white;border-radius:8px;">
                <center><img src="~/images/download1.png" style="width:180px;height:150px;"/></center>
              <div class="text-center text-muted mb-4">
                <h5 class="text-lead">Admin Login</h5>
              </div>
                  @using(Html.BeginForm("Login" , "Admin"))
                  {
                      @Html.AntiForgeryToken()
                <div class="form-group mb-3">
                  <div class="input-group input-group-alternative">
                    <div class="input-group-prepend">
                      <span class="input-group-text"><i class="ni ni-email-83"></i></span>
                    </div>
                    @*<input class="form-control" placeholder="Email" type="email">*@
                      @Html.TextBoxFor(model=>model.AdminUsername,new{ @class="form-control" , @placeholder="Admin Username" })
                      @Html.ValidationMessageFor(model=>model.AdminUsername,"",new {@class="text-danger"})
                  </div>
                </div>
                <div class="form-group">
                  <div class="input-group input-group-alternative">
                    <div class="input-group-prepend">
                      <span class="input-group-text"><i class="ni ni-lock-circle-open"></i></span>
                    </div>
                    @*<input class="form-control" placeholder="Password" type="password">*@
                      @Html.PasswordFor(model=>model.AdminPassword,new { @class="form-control" , @placeholder="Admin Password"})
                      @Html.ValidationMessageFor(model=>model.AdminPassword,"",new {@class="form-control"})
                     
                  </div>
                </div>
                <div class="custom-control custom-control-alternative custom-checkbox">
                  <input class="custom-control-input" id=" customCheckLogin" type="checkbox">
                  <label class="custom-control-label" for=" customCheckLogin">
                    <span class="text-muted">Remember me</span>
                  </label>
                </div>
                <div class="text-center">
                  <input type="submit" class="btn btn-primary my-4" value="Sign In">
                </div>
                  }
             
            </div>
          </div>
                  
          
                  
